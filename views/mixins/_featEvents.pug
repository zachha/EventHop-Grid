mixin featEvents()
    .featEvents__section.section.center__flex--column
        .featEvents__section--title.section__titles.center__flex--column
            h2.featEvents__title.section__title EVENTS
            h4.featEvents__subtitle.section__subtitle Check out our EventHop sponsored events!
        .featEvents__section--events.section__content.container
            .cards.event__cards
                .event__card
                    a.event__link(href="/events")
                        img.event__image.img-fluid(src="/img/photos/event-01.jpg")
                    .event__text
                        h3.event__text--title Early Bird
                        h4.event__text--subtitle Coffee | Exploration | Brunch
                
                
                
                


    