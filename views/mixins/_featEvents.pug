mixin featEvents()
    .section__titles.l-flex-col
        h2.section__title EVENTS
        h4.section__subtitle Check out our EventHop sponsored events!
    .l-container
        .section__cards.section__cards--events
            .card.event-card
                a.event-card__link(href="/events/early-bird")
                    img.image.h-img-fluid(src="/img/photos/event-01.jpg")
