mixin featEvents()
    .section.flex-center-all-column
        .section__titles.flex-center-all-column
            h2.section__title EVENTS
            h4.section__subtitle Check out our EventHop sponsored events!
        .section__content.container
            .cards.event-cards
                .event-card
                    a.event-card__link(href="/events/early-bird")
                        img.event-card__image.img-fluid(src="/img/photos/event-01.jpg")
                    .event-card__text
                        h3.event-card__text--title Early Bird
                        h4.event-card__text--subtitle Coffee | Exploration | Brunch
                .event-card
                    a.event-card__link(href="/events/south-by-southpoint")
                        img.event-card__image.img-fluid(src="/img/photos/event-02.jpg")
                    .event-card__text
                        h3.event-card__text--title South By Southpoint
                        h4.event-card__text--subtitle Lunch | Books | Dessert
                .event-card
                    a.event-card__link(href="/events/nightlife-cabaret")
                        img.event-card__image.img-fluid(src="/img/photos/event-03.jpg")
                    .event-card__text
                        h3.event-card__text--title Nightlife Cabaret
                        h4.event-card__text--subtitle Aperitif | Dinner | Lounge
                .event-card
                    a.event-card__link(href="/events/baseball-and-brews")
                        img.event-card__image.img-fluid(src="/img/photos/event-04.jpg")
                    .event-card__text
                        h3.event-card__text--title Baseball and Brews
                        h4.event-card__text--subtitle Sightseeing | Baseball | Nightcap
                .event-card
                    a.event-card__link(href="/events/one-night-on-broadway")
