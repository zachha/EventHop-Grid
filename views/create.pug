extends layout

block content
    section#create__content.create
        .create__section.section.l-flex-col
            .create__section--title.section__titles.l-flex-col
                h2.create__title CREATE YOUR OWN EVENT
                h4.create__subtitle Choose up to Three Event Locations!
                .title__section.section__cards.l-container
                    .location__box.complete
                        h3.locCard__header Location Complete
                        .locCard.locCard__background.chosen.shop
                            .locCard__overlay.overlayRed.locChosen
                                h2.infocard__title Ninth Street Bakery
                                .locInfo
                                    p.infocard__text.locAddress 112 S Duke St, Durham, NC 27701, USA
                                    p.infocard__text.locStars Google Rating: 4.6
                                button#locStart.button--infocard.button.h-hide Let's Go!
                                button#locOneWeb.button--infocard.locWebsite.button.h-grow Website
                    .location__box.chosen
                        h3.locCard__header Location #2
                        .locCard.locCard__background.bullLocal.chosen
                            .locCard__overlay.overlayBlack
                                h2.infocard__title Choose your next event type
                                button#locStart.button--infocard.button.h-grow Let's Go!
                                button#locTwoWeb.button--infocard.locWebsite.button.h-hide Website
                    .location__box
                        h3.locCard__header Location #3
                        .locCard.locCard__background
                            .locCard__overlay.overlayWhite
                                h2.infocard__title Choose your last event type
                                button#locStart.button--infocard.button.h-disabled Let's Go!
                                button#locThreeWeb.button--infocard.locWebsite.button.h-hide Website
                                
            .create__section--choose.l-flex-col
                .choose__section--title
                    h3.choose__title Choose a Type of Event
                .choose__section--buttons
                    button#cafe.button.map__button Cafe
                    button#bar.button.map__button Bar
                    button#restaurant.button.map__button Food
                    button#art_gallery.button.map__button Art
                    button#movie_theater.button.map__button Movie
                    button#spa.button.map__button.spa__button Spa
                .choose__section--map
                    h2.map__title Downtown Durham
                    #map
                .choose__section--dropdown
                    .choose__dropdown
                        label.choose__title(for="map-select") Then Choose a Location!
                        select#map__select.map__select(name="map-select")
                            option(value="") Select a Location!
                    .choose__button
                        button#addLoc.button.map__button.location__button Add Location
                .breakline
                .choose__section--infocards.l-container
                    .infocard.overlayRed
                        .infocard__body
                            h2.infocard__title Bull City Burger and Brewery
                            p.infocard__text.infocard__text--rating Google Ratings: <br>
                                - let review = {rating:3.3}
                                - let ratingMod = review.rating % 1;
                                - let ratingRounded = review.rating - ratingMod
                                span.stars(title= `Rated ${review.rating} out of 5 stars`)
                                    if ratingMod < 0.25
                                        - let rate = ratingRounded
                                        = `★`.repeat(rate)
                                        = `☆`.repeat(5 - rate)
                                    else if ratingMod > 0.75
                                        - let rate = ratingRounded + 1
                                        = `★`.repeat(rate)
                                        = `☆`.repeat(5 - rate)
                                    else
                                        - let rate = ratingRounded
                                        = `★`.repeat(rate)
                                        span.star-icon.half
                                            = `☆`
                                        = `☆`.repeat(5 - (rate + 1))
                            p.infocard__text.infocard__text--address 107 E Parrish St, Durham, NC 27701, USA
                            p.infocard__text.infocard__text--phone Phone Number: (919) 680-2333
                            .infocard__footer
                                a.infocard__anchor.infocard__website(href="www.google.com" target="_blank") Website
                        .infocard__pic
                                img(src="/img/photos/durham.jpeg").infocard__pic--image
                    .infocard.overlayBlack
                        .infocard__body
                            h2.infocard__title Fullsteam Brewery
                            p.infocard__text.infocard__text--rating Google Ratings: <br>
