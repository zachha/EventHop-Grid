                                    = `★`.repeat(rate)
                                    = `☆`.repeat(5 - rate)
                                else
                                    - let rate = ratingRounded
                                    = `★`.repeat(rate)
                                    span.star-icon.half
                                        = `☆`
                                    = `☆`.repeat(5 - (rate + 1))
                        p.infocard__text.infocard__text--address 280 S Mangum St #100, Durham, NC 27701, USA
                        p.infocard__text.infocard__text--phone Phone Number: (919) 937-9909
                        .infocard__footer
                            a.infocard__anchor.infocard__anchor--white.infocard__website(href="www.google.com" target="_blank") Website
                    .img__infocard-div
                            img.img__infocard(src="/img/photos/durham.jpeg")
